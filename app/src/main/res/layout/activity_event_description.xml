<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        tools:context=".PresentationLayer.Activities.AddEventMVP.EventActivities.AddEventDescriptionActivity.EventDescriptionActivity">

        <TextView
            android:textAlignment="center"
            android:layout_margin="4dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="Please fill in the description of the event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:gravity="top|left"
            android:id="@+id/mEditTextDescription"
            android:singleLine="false"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"/>
        <Button
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_profile_custom"
            android:text="Save"
            android:id="@+id/mButtonSave"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>
    </LinearLayout>
</layout>
