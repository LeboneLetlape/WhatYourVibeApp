<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        tools:context=".PresentationLayer.Activities.EventActivities.EventCategoryMVP.EventCategoryActivity">

        <TextView
            android:textAlignment="center"
            android:layout_margin="4dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="Please choose the category of the event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/mSpinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>
        <Button
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_profile_custom"
            android:text="Done"
            android:id="@+id/mButtonDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>