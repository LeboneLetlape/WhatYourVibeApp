<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/event_img"
                android:id="@+id/mImageViewCoverImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/mTextViewCategory"
                            android:text="Sport"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:background="#8BC34A"
                            android:textColor="#fff"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_weight="1"
                            android:gravity="end"
                            android:layout_gravity="end"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:drawableStart="@drawable/ic_baseline_event_24"
                                android:drawablePadding="2dp"
                                android:layout_width="24dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_marginLeft="4dp"
                                android:id="@+id/mTextViewDateFrom"
                                android:text="12 Jan 2021"
                                android:textSize="14dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:textSize="14dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginLeft="4dp"
                                android:text="-"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/mTextViewDateTo"
                                android:text="16 Jan 2021"
                                android:textSize="14dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>


                    </LinearLayout>
                    <TextView
                        android:layout_margin="1dp"
                        android:id="@+id/mTextViewTitle"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:text="Audible manager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_margin="1dp"
                        android:id="@+id/mTextViewDescription"
                        android:singleLine="true"
                        android:textSize="14dp"
                        android:text="Audible manager is also the official audible audiobook player which was developed many years ago. Compared with Audible app, Audible manager is out of date, no matter the interface or the function. Working as aax player, Audible manager still does its job."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:drawableStart="@drawable/ic_baseline_access_time_24"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:drawablePadding="4dp"
                                android:layout_width="24dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_marginLeft="4dp"
                                android:id="@+id/mTextViewTimeFrom"
                                android:text="09:00"
                                android:textSize="14dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:textSize="14dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginLeft="4dp"
                                android:text="-"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/mTextViewTimeTo"
                                android:text="15:00"
                                android:textSize="14dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:drawableStart="@drawable/ic_baseline_people_24"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:drawablePadding="4dp"
                                android:layout_width="24dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:id="@+id/mTextViewCheckIn"
                                android:text="15"
                                android:textSize="14dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>