<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        tools:context=".PresentationLayer.Activities.AddEventMVP.EventActivities.AddEventDescriptionActivity.EventDescriptionActivity">
        <TextView
            android:textAlignment="center"
            android:layout_margin="4dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="Please fill in the title of the event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/mEditTextTitle"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:background="@drawable/button_profile_custom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Save"
            android:id="@+id/mButtonSave"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>
    </LinearLayout>
</layout>