<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:gravity="center"
        tools:context=".PresentationLayer.Activities.LoginActivity.LoginActivity">

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"/>

            <EditText
                android:layout_marginTop="4dp"
                android:hint="Email"
                android:id="@+id/mEditTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginTop="4dp"
                android:hint="Password"
                android:id="@+id/mEditTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:background="@drawable/button_white_custom"
                android:id="@+id/mButtonLogin"
                android:text="Email"
                android:drawableRight="@drawable/ic_baseline_email_24"
                android:textColor="#000000"
                android:paddingRight="8dp"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <View
                    android:background="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:layout_marginTop="-10dp"
                    android:background="@color/colorWhite"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:text="OR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <Button
                android:id="@+id/mButtonFacebook"
                android:layout_marginTop="4dp"
                android:background="@drawable/button_blue_custom"
                android:textColor="#FFFFFF"
                android:paddingRight="8dp"
                android:paddingLeft="20dp"
                android:text="Facebook"
                android:drawableRight="@drawable/ic_036_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/mButtonTweeter"
                android:layout_marginTop="4dp"
                android:background="@drawable/button_light_blue_custom"
                android:textColor="#FFFFFF"
                android:paddingRight="8dp"
                android:paddingLeft="20dp"
                android:text="Tweeter"
                android:drawableRight="@drawable/ic_008_twitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/mButtonInstagram"
                android:layout_marginTop="4dp"
                android:background="@drawable/button_red_custom"
                android:textColor="#FFFFFF"
                android:paddingRight="8dp"
                android:paddingLeft="20dp"
                android:text="Instagram"
                android:drawableRight="@drawable/ic_029_instagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</layout>
