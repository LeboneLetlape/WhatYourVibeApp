<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        tools:context=".PresentationLayer.Activities.EditProfileMVP.EditProfileActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#FFFFFF">

                <TextView
                    android:textAlignment="center"
                    android:layout_margin="4dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="Edit Profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAlignment="center"
                    android:layout_margin="1dp"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="Please edit your profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>
                    <Button
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:background="@drawable/ic_launcher_background"
                        android:layout_marginTop="-50dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="1dp"
                        android:textSize="14dp"
                        android:text="Username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:background="@drawable/custom_edittext_background"
                        android:id="@+id/mEditTextUsername"
                        android:hint="Username"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="1dp"
                        android:textSize="14dp"
                        android:text="Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:background="@drawable/custom_edittext_background"
                        android:id="@+id/mEditTextEmail"
                        android:hint="Email"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="1dp"
                        android:textSize="14dp"
                        android:text="Province"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:background="@drawable/custom_edittext_background"
                        android:id="@+id/mSpinnerProvince"
                        android:hint="Province"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="1dp"
                        android:textSize="14dp"
                        android:text="Town"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:background="@drawable/custom_edittext_background"
                        android:id="@+id/mEditTextTown"
                        android:hint="Town"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="1dp"
                        android:textSize="14dp"
                        android:text="Gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:background="@drawable/custom_edittext_background"
                        android:id="@+id/mSpinnerGender"
                        android:padding="5dp"
                        android:hint="Province"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>

                    <Button
                        android:background="@drawable/button_profile_custom"
                        android:layout_marginTop="10dp"
                        android:id="@+id/mButtonSave"
                        android:text="Save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</layout>
